{
  "name": "ghost-desktop",
  "version": "2.0.0",
  "description": "Desktop Client for Ghost, the professional publishing platform",
  "private": true,
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "homepage": "http://ghost.org",
  "scripts": {
    "contributors": "node ./scripts/fetch-contributors.js",
    "build:macosicons": "node ./scripts/create-iconset.js",
    "start": "node ./scripts/fetch-contributors.js && cross-env DEBUG=ghost-desktop:* ember electron",
    "package": "npm run contributors && ember electron:package",
    "make": "npm run contributors && ember electron:make",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "ember electron:test",
    "test:lint": "eslint './ember-electron/main/**/*.js' './app/**/*.js'"
  },
  "repository": "",
  "engines": {
    "node": ">= 10.0"
  },
  "author": "Ghost Foundation",
  "keywords": [
    "ghost",
    "blog",
    "cms"
  ],
  "bugs": "https://github.com/TryGhost/Ghost-Desktop/issues",
  "contributors": "https://github.com/TryGhost/Ghost-Desktop/graphs/contributors",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^10.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "broccoli-asset-rev": "^2.7.0",
    "cross-env": "^5.2.0",
    "devtron": "^1.4.0",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "3.0.6",
    "ember-ajax": "4.0.0",
    "ember-cli": "3.5.0",
    "ember-cli-app-version": "^3.2.0",
    "ember-cli-babel": "^7.1.3",
    "ember-cli-dependency-checker": "^3.0.0",
    "ember-cli-eslint": "^4.2.3",
    "ember-cli-htmlbars": "^3.0.0",
    "ember-cli-htmlbars-inline-precompile": "^1.0.3",
    "ember-cli-inject-live-reload": "^1.8.1",
    "ember-cli-qunit": "^4.3.2",
    "ember-cli-shims": "^1.2.0",
    "ember-cli-sri": "^2.1.1",
    "ember-data": "^3.5.0",
    "ember-electron": "^2.10.0",
    "ember-export-application-global": "^2.0.0",
    "ember-inspector": "^3.1.0",
    "ember-load-initializers": "^1.1.0",
    "ember-local-storage": "1.4.1",
    "ember-qunit": "^3.4.1",
    "ember-resolver": "^4.5.5",
    "ember-sinon": "3.0.0",
    "ember-sinon-qunit": "3.3.0",
    "ember-sortable": "1.11.2",
    "ember-source": "~3.5.0",
    "ember-test-helpers": "^0.6.3",
    "eslint": "^5.9.0",
    "eslint-plugin-ember-suave": "^1.0.0",
    "find-parent-dir": "^0.3.0",
    "loader.js": "^4.7.0",
    "node-abi": "^2.5.0",
    "node-fetch": "^2.2.0",
    "normalize.css": "^8.0.0",
    "tmp": "0.0.33"
  },
  "dependencies": {
    "electron-compile": "^6.4.3",
    "electron-log": "^2.2.16",
    "electron-protocol-serve": "^1.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^4.1.1",
    "fs-extra": "^7.0.0",
    "he": "1.1.1",
    "hexrgb": "0.0.2",
    "js-string-escape": "1.0.1",
    "query-string": "6.1.0",
    "randomcolor": "0.5.3"
  },
  "config": {
    "forge": "./ember-electron/electron-forge-config.js"
  }
}
